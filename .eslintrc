{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "indent": [ 2, 4, {"SwitchCase": 1} ],
        "react/jsx-indent-props": [2, 4],
        "brace-style": [ 2, "stroustrup", { "allowSingleLine": true } ],
        "quotes": [ 1, "single"],
        "no-unused-vars": [ 1, { "vars": "all", "args": "after-used", "argsIgnorePattern": "req|res|next" }],
        "no-param-reassign": [2, {"props": false}],
        "no-shadow": [2, {"allow": ["err"]}],
        "new-cap": [1, { "capIsNewExceptions": ["ImmutableStore", "List", "Map"] }],
        "comma-dangle": 1,
        "no-unused-expressions": 1,
        "react/jsx-indent": [1, 4],
        "react/prefer-stateless-function": 0,
        "react/sort-comp": 1,
        "prefer-const": 1,
        "max-len": 1,
        "no-underscore-dangle": ["error", { "allow": ["_id", "__INITIAL_STATE__", "_json", "_header", "__"] }],
    },
}
